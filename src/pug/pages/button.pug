extends ../base/base.pug

block append page-variable
  - var current = "button"

block workspace

  .pageheader.-nobreadcrumbs
    span.label Button

  .card
    .cardheader
      span.label Link &lt;a&gt; as a button

    .content._padding
      pre
        code.language-html
          |
          | &lt;a class="ss-button color green" href="#">
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Color green Link
          |    &lt;span class="ss-icon-Next">&lt;/span>
          | &lt;/a>
          | &nbsp;
      table
        tr
          th &nbsp;
          th Primary
          th Secondary
          th Color
          th Color Green
        tr
          td Enable
          td
            a.ss-button(href="javascript:void(0)")
              span.icon-Search
              | Primary Link
              span.icon-Next
          td
            a.ss-button.secondary(href="javascript:void(0)")
              span.icon-Search
              | Secondary Link
              span.icon-Next
          td
            a.ss-button.color(href="javascript:void(0)")
              span.icon-Search
              | Color Link
              span.icon-Next
          td
            a.ss-button.color.green(href="javascript:void(0)")
              span.icon-Search
              | Color green Link
              span.icon-Next
        tr
          td Disable
          td
            a.ss-button.disable(href="javascript:void(0)")
              span.icon-Search
              | Primary Link
              span.icon-Next
          td
            a.ss-button.secondary.disable(href="javascript:void(0)")
              span.icon-Search
              | Secondary Link
              span.icon-Next
          td
            a.ss-button.color.disable(href="javascript:void(0)")
              span.icon-Search
              | Color Link
              span.icon-Next
          td
            a.ss-button.color.green.disable(href="javascript:void(0)")
              span.icon-Search
              | Color green Link
              span.icon-Next

  .card
    .cardheader
      span.label Link &lt;a&gt; as a link

    .content._padding
      pre
        code.language-html
          |
          | &lt;a class="ss-link color green" href="#">
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Color green Link
          |    &lt;span class="icon-Next">&lt;/span>
          | &lt;/a>
          | &nbsp;

      table
        tr
          th &nbsp;
          th Link
        tr
          td Enable
          td
            a.ss-link(href="javascript:void(0)")
              span.icon-Search
              | General Link
              span.icon-Next
        tr
          td Disable
          td
            a.ss-link.disable(href="javascript:void(0)")
              span.icon-Search
              | General Link
              span.icon-Next

  .card
    .cardheader
      span.label Button &lt;button&gt;

    .content._padding
      pre
        code.language-html
          |
          |  &lt;button>
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Primary Button
          |    &lt;span class="ss-icon-Next">&lt;/span>
          |  &lt;/button>
          |  &nbsp;
      table
        tr
          th &nbsp;
          th Primary Button
          th Secondary Button
          th Color
          th Color Green
        tr
          td Enable
          td
            button
              span.icon-Search
              | Primary Button
              span.icon-Next
          td
            button.secondary
              span.icon-Search
              | Secondary Button
              span.icon-Next
          td
            button.color
              span.icon-Search
              | Color Button
              span.icon-Next
          td
            button.color.green
              span.icon-Search
              | Color green Button
              span.icon-Next
        tr
          td Disable
          td
            button(disabled)
              span.icon-Search
              | Primary Button
              span.icon-Next
          td
            button.secondary(disabled)
              span.icon-Search
              | Secondary Button
              span.icon-Next
          td
            button.color(disabled)
              span.icon-Search
              | Color Button
              span.icon-Next
          td
            button.color.green(disabled)
              span.icon-Search
              | Color Green Button
              span.icon-Next

  .card
    .cardheader
      span.label TEST edge case

    .content._padding
      table
        tr
          th For long text
          th Two Button together
        tr
          td
            button
              span.icon-Documents
              | เมื่อเนื้อหาเป็น
              br
              | ภาษาไทย
              br
              | แบบมีหลายบรรทัด
              span.icon-External-link
          td
            button
              span.icon-Search
              | Primary Button

            button
              | Primary Button
              span.icon-Search

