extends ../base/base.pug

block append page-variable
  - var current = "button"

block workspace

  .ss-page-header.-nobreadcrumbs
    span.label Button

  .ss-card
    .header
      span.label Link &lt;a&gt; as a button

    .body._padding
      table
        tr
          th &nbsp;
          th Primary
          th Secondary
          th Color
          th Color Green
        tr
          td Enable
          td
            a.ss-button(href="javascript:void(0)")
              span.ss-icon-Search
              | Primary Link
              span.ss-icon-Next
          td
            a.ss-button.-secondary(href="javascript:void(0)")
              span.ss-icon-Search
              | Secondary Link
              span.ss-icon-Next
          td
            a.ss-button.-color(href="javascript:void(0)")
              span.ss-icon-Search
              | Color Link
              span.ss-icon-Next
          td
            a.ss-button.-color.-green(href="javascript:void(0)")
              span.ss-icon-Search
              | Color green Link
              span.ss-icon-Next
        tr
          td Disable
          td
            a.ss-button.disable(href="javascript:void(0)")
              span.ss-icon-Search
              | Primary Link
              span.ss-icon-Next
          td
            a.ss-button.-secondary.disable(href="javascript:void(0)")
              span.ss-icon-Search
              | Secondary Link
              span.ss-icon-Next
          td
            a.ss-button.-color.disable(href="javascript:void(0)")
              span.ss-icon-Search
              | Color Link
              span.ss-icon-Next
          td
            a.ss-button.-color.-green.disable(href="javascript:void(0)")
              span.ss-icon-Search
              | Color green Link
              span.ss-icon-Next
      pre
        code.language-html
          |
          | &lt;a class="ss-button color green" href="#">
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Color green Link
          |    &lt;span class="ss-icon-Next">&lt;/span>
          | &lt;/a>
          | &nbsp;

  .ss-card
    .header
      span.label Link &lt;a&gt; as a link

    .body._padding
      table
        tr
          th &nbsp;
          th Link
        tr
          td Enable
          td
            a.ss-link(href="javascript:void(0)")
              span.ss-icon-Search
              | General Link
              span.ss-icon-Next
        tr
          td Disable
          td
            a.ss-link.disable(href="javascript:void(0)")
              span.ss-icon-Search
              | General Link
              span.ss-icon-Next

      pre
        code.language-html
          |
          | &lt;a class="ss-link color green" href="#">
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Color green Link
          |    &lt;span class="ss-icon-Next">&lt;/span>
          | &lt;/a>
          | &nbsp;

  .ss-card
    .header
      span.label Button &lt;button&gt;

    .body._padding
      table
        tr
          th &nbsp;
          th Primary Button
          th Secondary Button
          th Color
          th Color Green
        tr
          td Enable
          td
            button
              span.ss-icon-Search
              | Primary
              span.ss-icon-Next
          td
            button.-secondary
              span.ss-icon-Search
              | Secondary
              span.ss-icon-Next
          td
            button.-color
              span.ss-icon-Search
              | Color
              span.ss-icon-Next
          td
            button.-color.-green
              span.ss-icon-Search
              | Color green
              span.ss-icon-Next
        tr
          td Disable
          td
            button(disabled)
              span.ss-icon-Search
              | Primary
              span.ss-icon-Next
          td
            button.-secondary(disabled)
              span.ss-icon-Search
              | Secondary
              span.ss-icon-Next
          td
            button.-color(disabled)
              span.ss-icon-Search
              | Color
              span.ss-icon-Next
          td
            button.-color.-green(disabled)
              span.ss-icon-Search
              | Color Green
              span.ss-icon-Next
      pre
        code.language-html
          |
          |  &lt;button>
          |    &lt;span class="ss-icon-Search">&lt;/span>
          |    Primary Button
          |    &lt;span class="ss-icon-Next">&lt;/span>
          |  &lt;/button>
          |  &nbsp;

  .ss-card
    .header
      span.label TEST edge case

    .body._padding
      table
        tr
          th For long text
          th Two Button together
        tr
          td
            button
              span.ss-icon-Documents
              | เมื่อเนื้อหาเป็น
              br
              | ภาษาไทย
              br
              | แบบมีหลายบรรทัด
              span.ss-icon-External-link

          td.two-button
            button
              span.ss-icon-Search
              | Primary Button

            button
              | Primary Button
              span.ss-icon-Search

